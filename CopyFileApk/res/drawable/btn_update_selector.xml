<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            
            <corners
                android:radius="16dip"
                ></corners>
            <padding 
                android:bottom="1dip" 
                android:left="1dip" 
                android:right="1dip" 
                android:top="1dip"></padding>

            <stroke 
                android:width="1dip" 
                android:color="#3281DD">
                
            </stroke>
        </shape>
        
        </item>
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">
            <corners
                android:radius="16dip"
                ></corners>
            <padding 
                android:bottom="1dip" 
                android:left="1dip" 
                android:right="1dip" 
                android:top="1dip">
                
            </padding>

            <stroke 
                android:width="1dip" 
                android:color="#CACACA">
                
            </stroke>
            
            <solid android:color="#0162C0"></solid>
        </shape>
        
        </item>

</selector>